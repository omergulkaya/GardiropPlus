<?xml version="1.0"?>
<ruleset name="Closet App API">
    <description>PHP CodeSniffer configuration for Closet App API</description>
    
    <!-- Include the whole project -->
    <file>application</file>
    
    <!-- Exclude third party and system files -->
    <exclude-pattern>*/third_party/*</exclude-pattern>
    <exclude-pattern>*/system/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    
    <!-- Use PSR-12 standard -->
    <rule ref="PSR12"/>
    
    <!-- Custom rules -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.Formatting.SpaceAfterNot"/>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Show colors -->
    <arg name="colors"/>
    
    <!-- Show warnings -->
    <arg value="w"/>
</ruleset>

