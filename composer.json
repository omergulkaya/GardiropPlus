{
    "name": "closet-app/web-api",
    "description": "Closet App RESTful API - CodeIgniter 3",
    "type": "project",
    "require": {
        "php": ">=7.2",
        "codeigniter/framework": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 application/",
        "cs-fix": "phpcbf --standard=PSR12 application/",
        "stan": "phpstan analyse application/ --level=5"
    },
    "config": {
        "optimize-autoloader": true
    }
}

